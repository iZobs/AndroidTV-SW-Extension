<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="@dimen/smart_watch_2_control_height"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/containerVolume"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:background="@android:color/black" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/btn_margin">

            <Button
                android:id="@+id/buttonPause"
                android:background="@color/bg_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_playback_pause"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/btn_margin">

            <Button
                android:id="@+id/buttonPlay"
                android:background="@color/bg_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_playback_play"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerChannel"
        android:layout_height="88px"
        android:layout_width="@dimen/smart_watch_2_control_width"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/btn_margin">

            <Button
                android:id="@+id/buttonPrev"
                android:background="@color/bg_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_playback_prev"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/btn_margin">

            <Button
                android:id="@+id/buttonRew"
                android:background="@color/bg_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_playback_rew"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/btn_margin">

            <Button
                android:id="@+id/buttonForward"
                android:background="@color/bg_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_playback_forw"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/btn_margin">

            <Button
                android:id="@+id/buttonNext"
                android:background="@color/bg_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_playback_next"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>